<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/heroChoiceFrame">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_menu"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/heroChoiceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/romans"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:textSize="29sp"

            app:layout_constraintBottom_toTopOf="@id/spartaHero"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/romeHero"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/rome_hero"

            android:onClick="rome"
            android:transitionName="heroTransition"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/persiaHero"
            />

        <TextView
            android:id="@+id/romeText"
            android:layout_width="116dp"
            android:layout_height="21dp"

            android:elevation="3dp"

            android:text="@string/rome"
            android:textColor="@color/franco"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roman_sd"
            android:gravity="center"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"

            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@id/romeHero"
            app:layout_constraintStart_toStartOf="@id/romeHero"
            app:layout_constraintEnd_toEndOf="@id/romeHero"
            />

        <ImageView
            android:id="@+id/persiaHero"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/persia_hero"

            android:onClick="persia"
            android:transitionName="heroTransition"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/spartaHero"
            app:layout_constraintStart_toEndOf="@id/romeHero"
             />

        <TextView
            android:id="@+id/persisText"
            android:layout_width="116dp"
            android:layout_height="21dp"

            android:elevation="3dp"

            android:text="@string/persia"
            android:textColor="@color/franco"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roman_sd"
            android:gravity="center"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"

            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@id/persiaHero"
            app:layout_constraintStart_toStartOf="@id/persiaHero"
            app:layout_constraintEnd_toEndOf="@id/persiaHero"
            />

        <ImageView
            android:id="@+id/spartaHero"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/sparta_hero"

            android:onClick="sparta"
            android:transitionName="heroTransition"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/egyptHero"
            app:layout_constraintStart_toEndOf="@id/persiaHero"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/spartaText"
            android:layout_width="116dp"
            android:layout_height="21dp"

            android:elevation="3dp"

            android:text="@string/sparta"
            android:textColor="@color/franco"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roman_sd"
            android:gravity="center"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"

            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@id/spartaHero"
            app:layout_constraintStart_toStartOf="@id/spartaHero"
            app:layout_constraintEnd_toEndOf="@id/spartaHero"
            />

        <ImageView
            android:id="@+id/egyptHero"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="@drawable/egypt_hero"


            android:onClick="egypt"
            android:transitionName="heroTransition"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/spartaHero"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/egyptText"
            android:layout_width="116dp"
            android:layout_height="21dp"

            android:elevation="3dp"

            android:text="@string/egypt"
            android:textColor="@color/franco"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roman_sd"
            android:gravity="center"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"

            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="@id/egyptHero"
            app:layout_constraintStart_toStartOf="@id/egyptHero"
            app:layout_constraintEnd_toEndOf="@id/egyptHero"
            />


        <TextView
            android:id="@+id/tutorialTextView"
            android:layout_width="252dp"
            android:layout_height="46dp"

            android:background="@android:color/transparent"
            android:text="@string/tutorial"
            android:textSize="27dp"
            android:gravity="center"
            android:textColor="@color/paolo"
            android:fontFamily="@font/roman_sd"
            android:textStyle="bold"
            android:autoSizeTextType="uniform"
            android:autoSizeMinTextSize="1dp"

            app:layout_constraintTop_toTopOf="@id/btnTutorial"
            app:layout_constraintBottom_toBottomOf="@id/btnTutorial"
            app:layout_constraintEnd_toEndOf="@id/btnTutorial"
            app:layout_constraintStart_toStartOf="@id/btnTutorial"
            android:layout_marginBottom="6dp"
            android:elevation="2dp"
            />

        <ImageButton
            android:id="@+id/btnTutorial"
            android:layout_width="272dp"
            android:layout_height="60dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/generic_button2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            android:onClick="tutorial"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>