<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        >

    <TextView
        android:id="@+id/collection_choice_text"
        android:layout_marginStart="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/collezione"
        android:textColor="#fffef2"

        android:fontFamily="@font/roman_sd"
        android:textStyle="bold"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="@id/collection_button"
        app:layout_constraintTop_toTopOf="@id/collection_button"
        app:layout_constraintEnd_toEndOf="@id/collection_button"
        app:layout_constraintBottom_toBottomOf="@id/collection_button"
        />

    <ImageButton
        android:id="@+id/collection_button"
        android:background="@drawable/generic_button"

        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_gravity="center"

        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toStartOf="@id/back_collection_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/collection_choice_button_icon"
        android:layout_width="57dp"
        android:layout_height="81dp"
        app:layout_constraintStart_toStartOf="@id/collection_button"
        app:layout_constraintTop_toTopOf="@id/collection_button"
        app:layout_constraintBottom_toBottomOf="@id/collection_button"
        android:layout_marginStart="-32dp"
        android:background="@drawable/rome_champ"
        />

    <TextView
        android:id="@+id/back_choice_text"
        android:layout_marginStart="25dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/backs"
        android:textColor="#fffef2"
        android:alpha="0.44"

        android:fontFamily="@font/roman_sd"
        android:textStyle="bold"
        android:textSize="27sp"
        app:layout_constraintStart_toStartOf="@id/back_collection_button"
        app:layout_constraintTop_toTopOf="@id/back_collection_button"
        app:layout_constraintEnd_toEndOf="@id/back_collection_button"
        app:layout_constraintBottom_toBottomOf="@id/back_collection_button"
        />

    <ImageButton
        android:id="@+id/back_collection_button"
        android:background="@drawable/generic_button"

        android:layout_width="275dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:alpha="0.44"

        app:layout_constraintStart_toEndOf="@id/collection_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        />
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="57dp"
        android:layout_height="81dp"
        app:layout_constraintStart_toStartOf="@id/back_collection_button"
        app:layout_constraintTop_toTopOf="@id/back_collection_button"
        app:layout_constraintBottom_toBottomOf="@id/back_collection_button"
        android:layout_marginStart="-32dp"
        android:background="@drawable/back_carta"
        android:alpha="0.44"
        />

    <FrameLayout
        android:id="@+id/layout_collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/back_icon"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>