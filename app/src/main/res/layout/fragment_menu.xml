<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menuView">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_menu"
        />

    <ImageButton
        android:id="@+id/btnPlay"
        android:background="@drawable/play_button_menu"

        android:layout_width="352dp"
        android:layout_height="90dp"
        android:layout_gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAchievements"
        android:onClick="startGame"
        />
    <TextView
        android:id="@+id/playTextView"
        android:layout_marginStart="46dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/gioca"
        android:textColor="#fffef2"

        android:fontFamily="@font/roman_sd"
        android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAchievements"
        />

    <ImageButton
        android:id="@+id/btnAchievements"
        android:background="@drawable/goals_button_menu"

        android:layout_width="352dp"
        android:layout_height="90dp"
        android:layout_gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCollection"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        android:onClick="achievements"
        />
    <TextView
        android:layout_marginStart="46dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:text="@string/obbiettivi"
        android:fontFamily="@font/roman_sd"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/franco"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnCollection"
        app:layout_constraintTop_toBottomOf="@id/btnPlay"
        />

    <ImageButton
        android:id="@+id/btnCollection"
        android:background="@drawable/collection_button_menu"

        android:layout_width="352dp"
        android:layout_height="90dp"
        android:layout_gravity="center"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAchievements"
        android:onClick="collection"
        />
    <TextView
        android:layout_marginStart="46dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@android:color/transparent"
        android:text="@string/collezione"
        android:fontFamily="@font/roman_sd"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/franco"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnAchievements"
        />



    <ImageButton
        android:id="@+id/settings"
        android:background="@drawable/settings_button"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="settings"
        />

    <ImageButton
        android:id="@+id/btnRanking"
        android:background="@drawable/trophy"

        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"

        android:onClick="ranking"


        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>