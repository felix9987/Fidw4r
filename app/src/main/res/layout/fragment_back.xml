<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/back_standard"
        android:layout_width="@dimen/card_width_collection"
        android:layout_height="@dimen/card_height_collection"
        android:background="@drawable/back_carta"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/back_unlock"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:id="@+id/back_unlock"
        android:layout_width="@dimen/card_width_collection"
        android:layout_height="@dimen/card_height_collection"
        android:background="@drawable/back_roma"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_standard"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/littleStarBackStandard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/star"
        android:alpha="0.22"

        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="@id/back_standard"
        app:layout_constraintEnd_toEndOf="@id/back_standard"
        />

    <ImageView
        android:id="@+id/littleStarSpecialBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/star"
        android:alpha="0.22"

        android:layout_marginEnd="-15dp"
        android:layout_marginBottom="-10dp"
        app:layout_constraintBottom_toBottomOf="@id/back_unlock"
        app:layout_constraintEnd_toEndOf="@id/back_unlock"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:fontFamily="@font/romans"
        android:gravity="center"
        android:textColor="@color/franco"
        android:background="@android:color/transparent"
        android:textSize="29sp"
        android:text="@string/back_choice"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/back_standard"
        />

</androidx.constraintlayout.widget.ConstraintLayout>