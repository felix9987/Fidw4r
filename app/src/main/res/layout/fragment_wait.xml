<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    >

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/hourGlass"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/a"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textViewResource"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />


    <TextView
        android:id="@+id/textViewResource"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/transparent"


        android:text="@string/ricerca_in_corso"
        android:gravity="center"
        android:textColor="#fffef2"

        android:fontFamily="@font/roman_sd"
        android:textStyle="bold"
        android:textSize="30sp"

        app:layout_constraintTop_toBottomOf="@id/hourGlass"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>