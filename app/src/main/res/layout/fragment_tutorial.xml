<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:id="@+id/tutorialTotalView">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tutorial_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/franco"
            android:fontFamily="@font/roman_sd"
            android:textStyle="bold"
            android:textSize="20dp"
            android:autoSizeTextType="uniform"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="2dp"
        ></TextView>


        <TextView
            android:id="@+id/tutorial_text_description"
            android:layout_width="500dp"
            android:height="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@color/franco"
            android:fontFamily="@font/roman_sd"
            android:textStyle="bold"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"

            app:layout_constraintVertical_bias="0.55"
            app:layout_constraintTop_toBottomOf="@id/tutorial_text_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:elevation="2dp"
            ></TextView>

        <FrameLayout
            android:id="@+id/tutorial_view"
            android:layout_width="532.5dp"
            android:layout_height="270dp"

            android:background="@drawable/tutorial_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.496"
            ></FrameLayout>

        <ImageButton
            android:id="@+id/next_tutorial_slide"
            android:background="@drawable/right"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="20dp"

            />

        <ImageButton
            android:id="@+id/previous_tutorial_slide"
            android:background="@drawable/left"

            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>